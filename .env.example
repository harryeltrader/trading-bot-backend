# Trading Bot Backend - Environment Variables

# ============================================================================
# API Configuration
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# ============================================================================
# MongoDB Configuration
# ============================================================================
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=trading_bot_db

# ============================================================================
# JWT Security
# ============================================================================
JWT_SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 días

# ============================================================================
# Email Configuration (SMTP)
# ============================================================================
# Para Gmail: smtp.gmail.com:587
# Para SendGrid: smtp.sendgrid.net:587
# Para Mailgun: smtp.mailgun.org:587
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=your-email@gmail.com
FROM_NAME=Trading Bot Backend

# ============================================================================
# Frontend Configuration
# ============================================================================
FRONTEND_URL=http://localhost:3000

# ============================================================================
# Data Paths
# ============================================================================
DATA_RAW_DIR=data/raw
DATA_PROCESSED_DIR=data/processed
DATA_CACHE_DIR=data/cache

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO

# ============================================================================
# CORS (para producción, especificar dominios exactos)
# ============================================================================
ALLOWED_ORIGINS=*

# ============================================================================
# OAuth Credentials (Opcional)
# ============================================================================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

